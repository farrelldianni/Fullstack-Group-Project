<div class="container login-container">
    <h1 class="display-1">Vinder</h1> 
    <h2> Made by Lonely Gamers, for Lonely Gamers</h2>
    <h4 class="lead">Account Login</h4>
    <div class="form-group">
        <!-- <label for="usr">User Name:</label> -->
        <input type="text" class="form-control" id="usr" placeholder="User Name">
    </div>
    <div class="form-group">
        <!-- <label for="pwd">Password:</label> -->
        <input type="password" class="form-control" id="pwd" placeholder="Password">
    </div>
    <div class="button-container">
        <div>
            <a href="/home">
            <button type="button" class="btn">Login</button>
            </a>
        </div>
        <button type="button" class="btn" data-toggle="modal" data-target="#myModal">Create Account</button>
    </div>
</div>
{{!-- Modal --}}
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="modal fade" id="myModal">
        <div class="modal-dialog">
          <div class="modal-content modal-md">
            <div class="modal-header">
                <h1 class="display-4">Welcome to Vinder</h1>
            </div>
            <div class="modal-body">
                <div class="form-group "> 
                    <div class="form-row justify-content-around">
                        <!-- <label for="usr">User Name:</label> -->
                        <input type="text" class="form-control form  modal-usr" id="usr" placeholder="User Name">
                        <!-- <label for="pwd">Password:</label> -->
                        <input type="password" class="form-control form  modal-usr" id="pwd" placeholder="Password">
                    </div>
                    <!-- <label for="email">Email:</label> -->
                    <input type="text" class="form-control form modal-form " id="Email" placeholder="Email">
                </div>
                <div class="form-row justify-content-around">
                    <div>
                        <button type="button" id="btn" class="btn">Create Account</button>
                    </div>
                    <div class="form-check">
                        <input  class="form-check-input" type="checkbox" name="remember" id="rememberMeCheck"> 
                        <label class="form-check-label" for="rememberMeCheck">Remember me</label>
                    </div>
                </div>           
            </div>
            <div class="modal-footer">
                <button class="btn"  data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
  </div>
</div>
</div>
</div>